{
    "env": {
        "browser": true,
        "es6": true,
        "es2021": true,
        "jest": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended", "react-app"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["react", "jest"],
    "settings": {
        "react": {
            "version": "latest"
        }
    },
    "rules": {
        "comma-dangle": "off",
        "handle-callback-err": "off",
        "consistent-return": "off",
        "react/prop-types": "off",
        "no-var": "warn",
        "semi": "warn",
        "indent": "warn",
        "no-multi-spaces": "warn",
        "space-in-parens": "warn",
        "no-multiple-empty-lines": "warn",
        "prefer-const": "warn",
        "no-use-before-define": "warn"
    }
}
